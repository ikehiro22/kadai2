<h1>Books</h1>
<% if flash[:notice] %>
    <div class="flash">
        <%= flash[:notice] %>
    </div>
<% end %>
<div class="A">
    <div class="B">
        <p>title      body</p>
    </div>
    <div class="C">
        <% if @lists.present? %>
        <% @lists.each do |list| %>
            
            <%= list.title %>
            
            <%= list.body %>
       
            <%= link_to("Show", "/posts/#{list.id}/show") %>
            
            <%= link_to("Edit", "/posts/#{list.id}/edit") %>
            
            <%= link_to("Destroy", "/posts/#{list.id}/destroy", {method: "delete"},) %><br>
       
        <% end %>
        
        <% end %>
    </div>
</div>


<h1>New book</h1>
<% @list.errors.full_messages.each do |message| %>
  <div class="form-error">
    <%= message %>
  </div>
<% end %>
<%= form_for(@list, url: "/posts/create") do |f| %>
  <h4>title</h4>
  	<%= f.text_field :title %>
  <h4>body</h4>
  	<%= f.text_area :body %>
<%= f.submit 'create book' %>

<% end %>